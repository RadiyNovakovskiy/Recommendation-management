{% extends 'main/base.html.twig' %}
{% block body %}
    
    <div class="container">
        <div class="row no-gutters">
            <div class="col-12">
                <h1 class="display-4 text-center mt-5">{{ title }}</h1>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row no-gutters">
            <div class="col-12">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Название</th>
                            <th scope="col">Описание</th>
                            <th scope="col">Дата создания</th>
                            <th scope="col">Категория</th>
                            <th scope="col">Оценка</th>
                            <th scope="col">Действие</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% if posts is empty %}
                        <tr>
                            <td colspan="5" class="text-center"><span class="text-block-50">У вас нет ни одного созданного поста!</span></td>
                        </tr>
                    {% endif %}
                    {% for post in posts %}
                        <tr>
                            <td>{{ post.title }}</td>
                            <td>{{ post.description }}</td>
                            <td></td>
                            <td>{{ post.category.title }}</td>
                            <td>{{ post.rating }}</td>
                            <td><a href="{{ path('post_update', {'userId': app.user.id, 'postId': post.id})}}" class=" btn btn-primary">Редактироать</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}