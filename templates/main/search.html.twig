{% extends 'main/base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row no-gutters mt-5">
            <div class="col-12 col-lg-6 col-md-6">
                <h1 class="display-4">
                    {{query}}
                </h1>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row no-gutters justify-content-center mt-5">
            <div class="col-12 justify-content-center">
                {% for result in results %}
                        <div class="card mb-3" style="max-width: 980px;">
                            <div class="row g-0">
                                <div class="col-md-4">
                                    <img src="{{ asset('uploads/post/') }}{{ result.image }}" class="img-fluid rounded-start" alt="">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h5 class="card-title">{{ result.title }}</h5>
                                        <p class="card-text">{{ result.description }}</p>
                                        {% if comments is empty %}
                                            <p class="card-text"><small class="text-muted">Комментариев не обнаружено</small></p>
                                        {% else %}
                                            {% for comment in result.comments %}
                                                {% if loop.last %}
                                                    <p class="card-text"><small class="text-muted">{{ comment.content }}</small></p>
                                                {% endif %}
                                            {% endfor %}
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
